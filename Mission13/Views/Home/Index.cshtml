@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowl>




<h1 class="pb-2">@ViewBag.TeamName</h1>

<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>First Name</td>
            <td>Middle Initial</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
            <td>Team Name</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (Bowl b in Model)
        {
        <tr>
            <td>@b.BowlerFirstName</td>
            <td>@b.BowlerMiddleInit</td>
            <td>@b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>
            <td>@b.Team.TeamName</td>
            <td class="text-center"><a asp-controller="Home" class="btn btn-info btn-sm d-flex justify-content-center" asp-action="Edit" asp-route-bowlerid="@b.BowlerID">Edit</a></td>
            <td class="text-center"><a asp-controller="Home" class="btn btn-info btn-sm d-flex justify-content-center" asp-action="Delete" asp-route-bowlerid="@b.BowlerID">Delete</a></td>



        </tr>
        }

    </tbody>

</table>

<span class="badge badge-pill" style="float:right">

  <a class="btn btn-primary" asp-controller="Home" asp-action="Bowl">Add a Bowler</a>

</span>

<br /><br />


